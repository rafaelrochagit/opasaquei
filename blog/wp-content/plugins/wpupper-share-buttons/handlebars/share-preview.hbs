{{#each this}}

	{{#if first}}
		<div id="{{prefix}}-container-{{layout}}"
             data-preview-layout="{{layout}}"
			 class="{{prefix}} {{prefix}}-{{layout}} social-share {{prefix}}-preview">

		{{#if title}}
			<div class="{{prefix}}-title">
			 	<span>{{title}}</span>
			 </div>
		 {{/if}}
	{{/if}}

	<div class="{{prefix}}-item {{prefix}}-{{item_class}}">
		<a class="{{prefix}}-button {{prefix}}-btn" title="{{item_title}}"
		   data-item="bg-color">

			<i class="{{prefix}}-icon-{{item_class}}-{{layout}}"
			   data-item="icons-color"></i>

			{{#if item_inside}}
				<span class="{{prefix}}-title {{prefix}}-btn-inside"
					  data-item="inside">{{item_inside}}</span>
			{{/if}}
		</a>

		{{#if has_counter}}
			<span class="{{prefix}}-count {{prefix}}-counter"
				  data-item="text">{{counter}}</span>
		{{/if}}
	</div>

{{/each}}
</div>
<button class="button" data-action="no-title"></button>
<button class="button" data-action="no-counter"></button>